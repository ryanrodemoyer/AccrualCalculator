@model AppName.Web.Models.IndexDashboardViewModel

@{
}

<h1>Dashboard</h1>

<div class="row">
    <div class="col-md-3">
        <h2>Accruals</h2>

        @foreach (var accrual in Model.UserAccruals)
        {
            <div class="row" style="padding: 0 5px;">
                <a class="btn btn-info btn-block" style="margin-bottom: 10px;" asp-action="View" asp-controller="Dashboard" asp-route-id="@accrual.AccrualId">
                    <h2>@accrual.Name</h2>
                </a>
            </div>
        }
    </div>
    <div class="col-md-3">Column</div>
    <div class="col-md-3">Column</div>
    <div class="col-md-3">Column</div>
</div>