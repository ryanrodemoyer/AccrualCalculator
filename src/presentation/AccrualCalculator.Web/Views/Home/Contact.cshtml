@model AppName.Web.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

@section HeadScripts
{
    <script src='https://www.google.com/recaptcha/api.js'></script>
}

@await Html.PartialAsync("_ValidationScriptsPartial")

<h1>@ViewData["Title"]</h1>

<hr />

<div id="row">
