        @* </div>     *@
        <div class="row form-group">
            <div class="col-md-offset-2 col-md-8">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-envelope"> Send</i>
                </button>
            </div>
        </div>        
    </form>
</div>
