    <form asp-action="Contact" asp-controller="Home" method="POST">
        <div class="row form-group">
            <label asp-for="Name" class="col-md-2 col-form-label font-weight-bold"></label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control" id="name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Email" class="col-md-2 col-form-label font-weight-bold"></label>
            <div class="col-md-8">
                <input asp-for="Email" class="form-control" id="email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Message" class="col-md-2 col-form-label font-weight-bold"></label>
            <div class="col-md-8">
                <textarea asp-for="Message" class="form-control" id="message" rows="7"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="pull-right">
                    <div class="g-recaptcha" data-sitekey="6Le_sHUUAAAAAJ0KYtCViL8sKftwRU7tAm7QoYWl"></div>
                </div>
            </div>
        </div> 
